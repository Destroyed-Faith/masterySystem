<form class="{{cssClass}}" autocomplete="off">
  
  <!-- Header -->
  <header class="sheet-header">
    <div class="portrait-section">
      <div class="profile-img-wrapper">
        <div class="profile-img-container {{#unless editable}}locked{{/unless}}" data-image-type="portrait">
          <img class="profile-img {{#if editable}}{{else}}locked{{/if}}" src="{{actor.img}}" title="{{actor.name}} Portrait" alt="{{actor.name}} Portrait" />
          <div class="profile-overlay">
            <div class="profile-zone profile-zone-edit" data-action="edit" data-img-type="portrait">
              <span class="zone-label">EDIT</span>
            </div>
            <div class="profile-zone profile-zone-show" data-action="show" data-img-type="portrait">
              <span class="zone-label">SHOW</span>
            </div>
          </div>
        </div>
        <div class="profile-img-label">PORTRAIT</div>
      </div>
      <div class="profile-img-wrapper">
        <div class="profile-img-container profile-img-container-token {{#unless editable}}locked{{/unless}}" data-image-type="token">
          <img class="profile-img {{#if editable}}{{else}}locked{{/if}}" src="{{default actor.prototypeToken.texture.src actor.img}}" title="{{actor.name}} Token" alt="{{actor.name}} Token" />
          <div class="profile-overlay">
            <div class="profile-zone profile-zone-edit" data-action="edit" data-img-type="token">
              <span class="zone-label">EDIT</span>
            </div>
            <div class="profile-zone profile-zone-show" data-action="show" data-img-type="token">
              <span class="zone-label">SHOW</span>
            </div>
          </div>
        </div>
        <div class="profile-img-label">TOKEN</div>
      </div>
    </div>
    
    <div class="header-info">
      <div class="mastery-rank-box" title="Mastery Rank">
        <label>MR</label>
        <span class="rank-value">{{default system.mastery.rank 2}}</span>
      </div>
      
      {{#if creationComplete}}
      <div class="points-box" title="Attribute Points">
        <label>AP</label>
        <div class="points-display">
          <span class="points-value">{{default system.points.attribute 0}}</span>
        </div>
      </div>
      
      <div class="points-box" title="Mastery Points">
        <label>MP</label>
        <div class="points-display">
          <span class="points-value">{{default system.points.mastery 0}}</span>
        </div>
      </div>
      {{else}}
      <!-- Character Creation Point Counters -->
      <div class="points-box creation-points" title="Attribute Points Remaining">
        <label>AP</label>
        <div class="points-display">
          <span class="points-value {{#if (eq creation.attributePointsRemaining 0)}}complete{{else}}remaining{{/if}}">{{creation.attributePointsRemaining}}</span>
          <span class="points-label">/ 16</span>
        </div>
      </div>
      
      <div class="points-box creation-points" title="Skill Points Remaining">
        <label>SP</label>
        <div class="points-display">
          <span class="points-value {{#if (eq creation.skillPointsRemaining 0)}}complete{{else}}remaining{{/if}}">{{creation.skillPointsRemaining}}</span>
          <span class="points-label">/ {{creation.skillPointsConfig}}</span>
        </div>
      </div>
      
      <div class="points-box creation-points" title="Disadvantage Points">
        <label>DP</label>
        <div class="points-display">
          <span class="points-value">{{creation.disadvantagePoints}}</span>
          <span class="points-label">/ 8</span>
        </div>
      </div>
      {{/if}}
      
      <div class="character-name-box">
        {{#if editable}}
          <input name="name" type="text" value="{{actor.name}}" placeholder="Character Name" />
        {{else}}
          <h1>{{actor.name}}</h1>
        {{/if}}
      </div>
    </div>
  </header>

  <!-- Character Creation Banner -->
  {{#unless creationComplete}}
  <div class="creation-banner">
    <div class="creation-banner-content">
      <h3><i class="fas fa-user-edit"></i> Character Creation Mode</h3>
      <p>Allocate your points: <strong>{{creation.attributePointsRemaining}}</strong> Attribute Points, <strong>{{creation.skillPointsRemaining}}</strong> Skill Points remaining. 
      <strong>Disadvantages:</strong> <strong>{{creation.disadvantagePoints}}</strong> / 8 points (optional - sets starting Faith Fractures).</p>
      {{#if creation.canFinalize}}
      <button type="button" class="finalize-creation" title="Finalize character creation">
        <i class="fas fa-check-circle"></i> Finalize Character Creation
      </button>
      {{else}}
      <span class="creation-status">
        Complete: Attributes ({{creation.attributePointsRemaining}} remaining), Skills ({{creation.skillPointsRemaining}} remaining)
        {{#unless creation.disadvantagesReviewed}}, Disadvantages (review required){{/unless}}.
      </span>
      {{/if}}
      {{#if (userIsGM)}}
      <button type="button" class="force-unlock-creation" title="GM Only: Force unlock character creation">
        <i class="fas fa-unlock"></i> Force Unlock
      </button>
      {{/if}}
    </div>
  </div>
  {{/unless}}

  <!-- Tabs Navigation (Right Side Bookmarks) -->
  <nav class="sheet-tabs tabs" data-group="primary">
    <a class="item" data-tab="attributes"><i class="fas fa-fist-raised"></i> Attributes</a>
    <a class="item" data-tab="skills"><i class="fas fa-cogs"></i> Skills</a>
    <a class="item" data-tab="powers"><i class="fas fa-magic"></i> Powers</a>
    <a class="item" data-tab="equipment"><i class="fas fa-shield-alt"></i> Equipment</a>
    <a class="item" data-tab="disadvantages"><i class="fas fa-exclamation-triangle"></i> Disadvantages</a>
    <a class="item" data-tab="biography"><i class="fas fa-scroll"></i> Bio</a>
  </nav>

  <!-- Sheet Body -->
  <section class="sheet-body">
    
    <!-- ATTRIBUTES TAB -->
    <div class="tab attributes" data-group="primary" data-tab="attributes">
      
      <!-- Attributes Grid Section -->
      <div class="attributes-grid-section">
        <h3><i class="fas fa-fist-raised"></i> Character Attributes</h3>
        
        <!-- Row 1: Physical + Mental Attributes -->
        <div class="attributes-grid">
          
          <!-- Might -->
          {{#with system.attributes.might}}
            <div class="attribute-card" data-attribute="might">
              <div class="attribute-card-header">
                <h4 class="attribute-name"><i class="fas fa-dumbbell"></i> Might</h4>
                <div class="attribute-value-with-button">
                  <div class="attribute-value">{{default value 0}}</div>
                  {{#if ../creationComplete}}
                  <button type="button" class="attribute-spend-point" data-attribute="might" title="Spend Attribute Point">
                    <i class="fas fa-arrow-up"></i>
                  </button>
                  {{else}}
                  <div class="creation-controls">
                    <button type="button" class="attr-decrease" data-attribute="might" title="Decrease Attribute" {{#if (lte value ../creation.masteryRank)}}disabled{{/if}}>
                      <i class="fas fa-minus"></i>
                    </button>
                    <button type="button" class="attr-increase" data-attribute="might" title="Increase Attribute" {{#if (gte value 8)}}disabled{{/if}} {{#if (eq ../creation.attributePointsRemaining 0)}}disabled{{/if}}>
                      <i class="fas fa-plus"></i>
                    </button>
                  </div>
                  {{/if}}
                </div>
              </div>
              
              <!-- Stones Display -->
              <div class="attribute-stones">
                <div class="stones-container">
                  {{#times (calculateStones value)}}
                    <span class="stone filled">●</span>
                  {{/times}}
                  {{#times (subtract 5 (calculateStones value))}}
                    <span class="stone empty">○</span>
                  {{/times}}
                </div>
                <div class="stones-count">{{calculateStones value}} / 5 Stones</div>
              </div>
              
              <!-- Roll Button -->
              <button type="button" class="attribute-roll" data-attribute="might" title="Roll Might">
                <i class="fas fa-dice-d20"></i> Roll Might
              </button>
            </div>
          {{/with}}
          
          <!-- Agility -->
          {{#with system.attributes.agility}}
            <div class="attribute-card" data-attribute="agility">
              <div class="attribute-card-header">
                <h4 class="attribute-name"><i class="fas fa-running"></i> Agility</h4>
                <div class="attribute-value-with-button">
                  <div class="attribute-value">{{default value 0}}</div>
                  {{#if ../creationComplete}}
                  <button type="button" class="attribute-spend-point" data-attribute="agility" title="Spend Attribute Point">
                    <i class="fas fa-arrow-up"></i>
                  </button>
                  {{else}}
                  <div class="creation-controls">
                    <button type="button" class="attr-decrease" data-attribute="agility" title="Decrease Attribute" {{#if (lte value ../creation.masteryRank)}}disabled{{/if}}>
                      <i class="fas fa-minus"></i>
                    </button>
                    <button type="button" class="attr-increase" data-attribute="agility" title="Increase Attribute" {{#if (gte value 8)}}disabled{{/if}} {{#if (eq ../creation.attributePointsRemaining 0)}}disabled{{/if}}>
                      <i class="fas fa-plus"></i>
                    </button>
                  </div>
                  {{/if}}
                </div>
              </div>
              
              <div class="attribute-stones">
                <div class="stones-container">
                  {{#times (calculateStones value)}}
                    <span class="stone filled">●</span>
                  {{/times}}
                  {{#times (subtract 5 (calculateStones value))}}
                    <span class="stone empty">○</span>
                  {{/times}}
                </div>
                <div class="stones-count">{{calculateStones value}} / 5 Stones</div>
              </div>
              
              <button type="button" class="attribute-roll" data-attribute="agility">
                <i class="fas fa-dice-d20"></i> Roll Agility
              </button>
            </div>
          {{/with}}
          
          <!-- Vitality -->
          {{#with system.attributes.vitality}}
            <div class="attribute-card" data-attribute="vitality">
              <div class="attribute-card-header">
                <h4 class="attribute-name"><i class="fas fa-heart"></i> Vitality</h4>
                <div class="attribute-value-with-button">
                  <div class="attribute-value">{{default value 0}}</div>
                  {{#if ../creationComplete}}
                  <button type="button" class="attribute-spend-point" data-attribute="vitality" title="Spend Attribute Point">
                    <i class="fas fa-arrow-up"></i>
                  </button>
                  {{else}}
                  <div class="creation-controls">
                    <button type="button" class="attr-decrease" data-attribute="vitality" title="Decrease Attribute" {{#if (lte value ../creation.masteryRank)}}disabled{{/if}}>
                      <i class="fas fa-minus"></i>
                    </button>
                    <button type="button" class="attr-increase" data-attribute="vitality" title="Increase Attribute" {{#if (gte value 8)}}disabled{{/if}} {{#if (eq ../creation.attributePointsRemaining 0)}}disabled{{/if}}>
                      <i class="fas fa-plus"></i>
                    </button>
                  </div>
                  {{/if}}
                </div>
              </div>
              
              <div class="attribute-stones">
                <div class="stones-container">
                  {{#times (calculateStones value)}}
                    <span class="stone filled">●</span>
                  {{/times}}
                  {{#times (subtract 5 (calculateStones value))}}
                    <span class="stone empty">○</span>
                  {{/times}}
                </div>
                <div class="stones-count">{{calculateStones value}} / 5 Stones</div>
              </div>
              
              <button type="button" class="attribute-roll" data-attribute="vitality">
                <i class="fas fa-dice-d20"></i> Roll Vitality
              </button>
            </div>
          {{/with}}
          
          <!-- Wits -->
          {{#with system.attributes.wits}}
            <div class="attribute-card" data-attribute="wits">
              <div class="attribute-card-header">
                <h4 class="attribute-name"><i class="fas fa-brain"></i> Wits</h4>
                <div class="attribute-value-with-button">
                  <div class="attribute-value">{{default value 0}}</div>
                  {{#if ../creationComplete}}
                  <button type="button" class="attribute-spend-point" data-attribute="wits" title="Spend Attribute Point">
                    <i class="fas fa-arrow-up"></i>
                  </button>
                  {{else}}
                  <div class="creation-controls">
                    <button type="button" class="attr-decrease" data-attribute="wits" title="Decrease Attribute" {{#if (lte value ../creation.masteryRank)}}disabled{{/if}}>
                      <i class="fas fa-minus"></i>
                    </button>
                    <button type="button" class="attr-increase" data-attribute="wits" title="Increase Attribute" {{#if (gte value 8)}}disabled{{/if}} {{#if (eq ../creation.attributePointsRemaining 0)}}disabled{{/if}}>
                      <i class="fas fa-plus"></i>
                    </button>
                  </div>
                  {{/if}}
                </div>
              </div>
              
              <div class="attribute-stones">
                <div class="stones-container">
                  {{#times (calculateStones value)}}
                    <span class="stone filled">●</span>
                  {{/times}}
                  {{#times (subtract 5 (calculateStones value))}}
                    <span class="stone empty">○</span>
                  {{/times}}
                </div>
                <div class="stones-count">{{calculateStones value}} / 5 Stones</div>
              </div>
              
              <button type="button" class="attribute-roll" data-attribute="wits">
                <i class="fas fa-dice-d20"></i> Roll Wits
              </button>
            </div>
          {{/with}}
          
        </div>
        
        <!-- Row 2: Mental/Social Attributes -->
        <div class="attributes-grid">
          
          <!-- Intellect -->
          {{#with system.attributes.intellect}}
            <div class="attribute-card" data-attribute="intellect">
              <div class="attribute-card-header">
                <h4 class="attribute-name"><i class="fas fa-book"></i> Intellect</h4>
                <div class="attribute-value-with-button">
                  <div class="attribute-value">{{default value 0}}</div>
                  {{#if ../creationComplete}}
                  <button type="button" class="attribute-spend-point" data-attribute="intellect" title="Spend Attribute Point">
                    <i class="fas fa-arrow-up"></i>
                  </button>
                  {{else}}
                  <div class="creation-controls">
                    <button type="button" class="attr-decrease" data-attribute="intellect" title="Decrease Attribute" {{#if (lte value ../creation.masteryRank)}}disabled{{/if}}>
                      <i class="fas fa-minus"></i>
                    </button>
                    <button type="button" class="attr-increase" data-attribute="intellect" title="Increase Attribute" {{#if (gte value 8)}}disabled{{/if}} {{#if (eq ../creation.attributePointsRemaining 0)}}disabled{{/if}}>
                      <i class="fas fa-plus"></i>
                    </button>
                  </div>
                  {{/if}}
                </div>
              </div>
              
              <div class="attribute-stones">
                <div class="stones-container">
                  {{#times (calculateStones value)}}
                    <span class="stone filled">●</span>
                  {{/times}}
                  {{#times (subtract 5 (calculateStones value))}}
                    <span class="stone empty">○</span>
                  {{/times}}
                </div>
                <div class="stones-count">{{calculateStones value}} / 5 Stones</div>
              </div>
              
              <button type="button" class="attribute-roll" data-attribute="intellect">
                <i class="fas fa-dice-d20"></i> Roll Intellect
              </button>
            </div>
          {{/with}}
          
          <!-- Resolve -->
          {{#with system.attributes.resolve}}
            <div class="attribute-card" data-attribute="resolve">
              <div class="attribute-card-header">
                <h4 class="attribute-name"><i class="fas fa-mountain"></i> Resolve</h4>
                <div class="attribute-value-with-button">
                  <div class="attribute-value">{{default value 0}}</div>
                  {{#if ../creationComplete}}
                  <button type="button" class="attribute-spend-point" data-attribute="resolve" title="Spend Attribute Point">
                    <i class="fas fa-arrow-up"></i>
                  </button>
                  {{else}}
                  <div class="creation-controls">
                    <button type="button" class="attr-decrease" data-attribute="resolve" title="Decrease Attribute" {{#if (lte value ../creation.masteryRank)}}disabled{{/if}}>
                      <i class="fas fa-minus"></i>
                    </button>
                    <button type="button" class="attr-increase" data-attribute="resolve" title="Increase Attribute" {{#if (gte value 8)}}disabled{{/if}} {{#if (eq ../creation.attributePointsRemaining 0)}}disabled{{/if}}>
                      <i class="fas fa-plus"></i>
                    </button>
                  </div>
                  {{/if}}
                </div>
              </div>
              
              <div class="attribute-stones">
                <div class="stones-container">
                  {{#times (calculateStones value)}}
                    <span class="stone filled">●</span>
                  {{/times}}
                  {{#times (subtract 5 (calculateStones value))}}
                    <span class="stone empty">○</span>
                  {{/times}}
                </div>
                <div class="stones-count">{{calculateStones value}} / 5 Stones</div>
              </div>
              
              <button type="button" class="attribute-roll" data-attribute="resolve">
                <i class="fas fa-dice-d20"></i> Roll Resolve
              </button>
            </div>
          {{/with}}
          
          <!-- Influence -->
          {{#with system.attributes.influence}}
            <div class="attribute-card" data-attribute="influence">
              <div class="attribute-card-header">
                <h4 class="attribute-name"><i class="fas fa-users"></i> Influence</h4>
                <div class="attribute-value-with-button">
                  <div class="attribute-value">{{default value 0}}</div>
                  {{#if ../creationComplete}}
                  <button type="button" class="attribute-spend-point" data-attribute="influence" title="Spend Attribute Point">
                    <i class="fas fa-arrow-up"></i>
                  </button>
                  {{else}}
                  <div class="creation-controls">
                    <button type="button" class="attr-decrease" data-attribute="influence" title="Decrease Attribute" {{#if (lte value ../creation.masteryRank)}}disabled{{/if}}>
                      <i class="fas fa-minus"></i>
                    </button>
                    <button type="button" class="attr-increase" data-attribute="influence" title="Increase Attribute" {{#if (gte value 8)}}disabled{{/if}} {{#if (eq ../creation.attributePointsRemaining 0)}}disabled{{/if}}>
                      <i class="fas fa-plus"></i>
                    </button>
                  </div>
                  {{/if}}
                </div>
              </div>
              
              <div class="attribute-stones">
                <div class="stones-container">
                  {{#times (calculateStones value)}}
                    <span class="stone filled">●</span>
                  {{/times}}
                  {{#times (subtract 5 (calculateStones value))}}
                    <span class="stone empty">○</span>
                  {{/times}}
                </div>
                <div class="stones-count">{{calculateStones value}} / 5 Stones</div>
              </div>
              
              <button type="button" class="attribute-roll" data-attribute="influence">
                <i class="fas fa-dice-d20"></i> Roll Influence
              </button>
            </div>
          {{/with}}
          
        </div>
      </div>
      
      <!-- Combat Stats Section -->
      <div class="combat-stats-section">
        <h3><i class="fas fa-shield-alt"></i> Combat Statistics</h3>
        
        <div class="combat-stats-grid">
          <!-- Evade -->
          <div class="combat-stat-card">
            <div class="stat-icon evade-icon"><i class="fas fa-wind"></i></div>
            <div class="stat-content">
              <label>Evade</label>
              <div class="stat-value">{{default system.combat.evadeTotal 10}}</div>
              <div class="stat-formula">Agi + Def.Combat + (MR├ù2)</div>
            </div>
          </div>
          
          <!-- Armor -->
          <div class="combat-stat-card">
            <div class="stat-icon armor-icon"><i class="fas fa-shield-alt"></i></div>
            <div class="stat-content">
              <label>Armor</label>
              <div class="stat-value">{{default system.combat.armorTotal 0}}</div>
              <div class="stat-formula">MR + Armor + Shield</div>
            </div>
          </div>
          
          <!-- Speed -->
          <div class="combat-stat-card">
            <div class="stat-icon speed-icon"><i class="fas fa-running"></i></div>
            <div class="stat-content">
              <label>Speed</label>
              <div class="stat-value">{{default system.combat.speed 6}}m</div>
              <div class="stat-formula">Base Movement</div>
            </div>
          </div>
          
          <!-- Initiative Bonus -->
          <div class="combat-stat-card">
            <div class="stat-icon initiative-icon"><i class="fas fa-bolt"></i></div>
            <div class="stat-content">
              <label>Initiative</label>
              <div class="stat-value">+{{default system.combat.initiativeBonus 0}}</div>
              <div class="stat-formula">Combat Reflexes</div>
            </div>
          </div>
        </div>
      </div>
      
      <!-- Saving Throws Section -->
      <div class="saving-throws-section">
        <h3><i class="fas fa-dice-d20"></i> Saving Throws</h3>
        
        <div class="saving-throws-grid-three">
          <!-- Body Save: Max(Might, Agility) k Mastery + Vitality -->
          <div class="saving-throw-card">
            <h4 class="save-title">
              <i class="fas fa-dumbbell"></i> Body Save
            </h4>
            <div class="save-pool">
              {{#if (gt system.attributes.might.value system.attributes.agility.value)}}
                {{system.attributes.might.value}}d8
              {{else}}
                {{system.attributes.agility.value}}d8
              {{/if}}
              k {{default system.mastery.rank 2}} + {{default system.attributes.vitality.value 2}}
            </div>
            <button type="button" class="save-roll-btn" data-save-type="body" title="Roll Body Save">
              <i class="fas fa-dice-d20"></i> Roll Save
            </button>
          </div>
          
          <!-- Mind Save: Max(Intellect, Wits) k Mastery + Vitality -->
          <div class="saving-throw-card">
            <h4 class="save-title">
              <i class="fas fa-brain"></i> Mind Save
            </h4>
            <div class="save-pool">
              {{#if (gt system.attributes.intellect.value system.attributes.wits.value)}}
                {{system.attributes.intellect.value}}d8
              {{else}}
                {{system.attributes.wits.value}}d8
              {{/if}}
              k {{default system.mastery.rank 2}} + {{default system.attributes.vitality.value 2}}
            </div>
            <button type="button" class="save-roll-btn" data-save-type="mind" title="Roll Mind Save">
              <i class="fas fa-dice-d20"></i> Roll Save
            </button>
          </div>
          
          <!-- Spirit Save: Max(Resolve, Influence) k Mastery + Vitality -->
          <div class="saving-throw-card">
            <h4 class="save-title">
              <i class="fas fa-hands-praying"></i> Spirit Save
            </h4>
            <div class="save-pool">
              {{#if (gt system.attributes.resolve.value system.attributes.influence.value)}}
                {{system.attributes.resolve.value}}d8
              {{else}}
                {{system.attributes.influence.value}}d8
              {{/if}}
              k {{default system.mastery.rank 2}} + {{default system.attributes.vitality.value 2}}
            </div>
            <button type="button" class="save-roll-btn" data-save-type="spirit" title="Roll Spirit Save">
              <i class="fas fa-dice-d20"></i> Roll Save
            </button>
          </div>
        </div>
      </div>
      
      {{#unless creationComplete}}
      <!-- Schticks Selection (Character Creation) -->
      <div class="schticks-section">
        <h3><i class="fas fa-star"></i> Schticks</h3>
        
        <table class="schticks-table">
          <thead>
            <tr>
              <th class="rank-column">
                <span class="rank-header">Rank</span>
              </th>
              <th class="schtick-column">Schtick</th>
              <th class="manifestation-column">Manifestation</th>
            </tr>
          </thead>
          <tbody>
            {{#each creation.schticksRows}}
            <tr class="schtick-row" data-rank="{{this.rank}}">
              <td class="rank-cell">
                <span 
                  class="rank-number" 
                  title="{{lookup (lookup ../creation.rankTooltips this.rank) 'description'}} | Example: {{lookup (lookup ../creation.rankTooltips this.rank) 'example'}}"
                >
                  {{this.rank}}
                </span>
              </td>
              <td class="schtick-cell">
                <input 
                  type="text" 
                  class="schtick-input" 
                  data-rank="{{this.rank}}"
                  value="{{this.schtickName}}"
                  placeholder="Enter Schtick name..."
                  title="Enter a Schtick name for Rank {{this.rank}}"
                />
              </td>
              <td class="manifestation-cell">
                <input 
                  type="text" 
                  class="schtick-manifestation-input" 
                  data-rank="{{this.rank}}"
                  value="{{this.manifestation}}"
                  placeholder="Describe the manifestation..."
                  title="Describe how this Schtick manifests at Rank {{this.rank}}"
                />
              </td>
            </tr>
            {{/each}}
          </tbody>
        </table>
      </div>
      {{/unless}}
      
      {{#if creationComplete}}
      <!-- Schticks Display (After Creation) -->
      {{#if system.schticks.ranks}}
      <div class="schticks-section schticks-display">
        <h3><i class="fas fa-star"></i> Schticks</h3>
        <table class="schticks-table schticks-display-table">
          <thead>
            <tr>
              <th class="rank-column">Rank</th>
              <th class="schtick-column">Schtick</th>
              <th class="manifestation-column">Manifestation</th>
            </tr>
          </thead>
          <tbody>
            {{#each system.schticks.ranks}}
            <tr class="schtick-row">
              <td class="rank-cell">
                <span class="rank-number">{{this.rank}}</span>
              </td>
              <td class="schtick-cell">
                <div class="schtick-name-display">{{this.schtickName}}</div>
              </td>
              <td class="manifestation-cell">
                <div class="manifestation-display">{{this.manifestation}}</div>
              </td>
            </tr>
            {{/each}}
          </tbody>
        </table>
      </div>
      {{/if}}
      {{/if}}
      
    </div>
    
    <!-- SKILLS TAB -->
    <div class="tab skills" data-group="primary" data-tab="skills">
      
      <div class="skills-overview">
        <h3><i class="fas fa-cogs"></i> Skills</h3>
        <p class="skills-description">
          Skills provide <strong>flat bonuses</strong> added after your roll. Max: <strong>4 ├ù Mastery Rank</strong>
        </p>
      </div>
      
      {{#each skills}}
        <div class="skill-category-compact">
          <h4 class="category-header-compact">
            {{#if (eq this.category "Physical")}}<i class="fas fa-running"></i>{{/if}}
            {{#if (eq this.category "Knowledge & Craft")}}<i class="fas fa-book"></i>{{/if}}
            {{#if (eq this.category "Social")}}<i class="fas fa-comments"></i>{{/if}}
            {{#if (eq this.category "Survival")}}<i class="fas fa-tree"></i>{{/if}}
            {{#if (eq this.category "Martial")}}<i class="fas fa-sword"></i>{{/if}}
            {{this.category}}
          </h4>
          <div class="skills-list-compact">
            {{#each this.skills}}
              <div class="skill-row-compact">
                <span class="skill-name-compact">{{this.name}}</span>
                <div class="skill-attrs-compact">
                  {{#each this.attributes}}
                    <span class="attr-badge">{{capitalize this}}</span>
                  {{/each}}
                </div>
                <div class="skill-value-display-compact">
                  <span class="skill-value-compact">{{default this.value 0}}</span>
                  {{#if ../creationComplete}}
                  <button type="button" class="skill-spend-point" data-skill="{{this.key}}" title="Spend Mastery Point (Cost: {{default this.value 0}} pts)">
                    <i class="fas fa-arrow-up"></i>
                  </button>
                  {{else}}
                  <div class="creation-controls">
                    <button type="button" class="skill-decrease" data-skill="{{this.key}}" title="Decrease Skill" {{#if (lte this.value 0)}}disabled{{/if}}>
                      <i class="fas fa-minus"></i>
                    </button>
                    <button type="button" class="skill-increase" data-skill="{{this.key}}" title="Increase Skill" {{#if (gte this.value 4)}}disabled{{/if}} {{#if (eq ../creation.skillPointsRemaining 0)}}disabled{{/if}}>
                      <i class="fas fa-plus"></i>
                    </button>
                  </div>
                  {{/if}}
                </div>
                <button type="button" class="skill-roll-compact" data-skill="{{this.key}}" title="Roll {{this.name}}">
                  <i class="fas fa-dice-d20"></i>
                </button>
              </div>
            {{/each}}
          </div>
        </div>
      {{/each}}
      
    </div>
    
    <!-- POWERS TAB -->
    <div class="tab powers" data-group="primary" data-tab="powers">
      
      <!-- Buttons always visible -->
      <div class="powers-overview">
        <h3 style="width: 225px !important;"><i class="fas fa-magic"></i> Powers & Magic</h3>
        <div class="powers-controls" style="width: 100%; height: 6px;">
          <button type="button" class="add-power-creation-btn" title="Add Power from Mastery Tree" style="height: 28px;">
            <i class="fas fa-plus"></i> Add Mastery Power
          </button>
          <button type="button" class="add-spell-creation-btn" title="Add Spell from Spell School" style="height: 30px;">
            <i class="fas fa-plus"></i> Add Spell
          </button>
        </div>
      </div>
      
      {{#unless creationComplete}}
      <!-- CHARACTER CREATION: Powers & Magic Selection Status -->
      <div class="creation-powers-section">
        <div class="creation-banner">
          <h3><i class="fas fa-magic"></i> Character Creation: Powers & Magic Selection</h3>
          <div class="creation-status">
            <div class="status-item">
              <label>Trees Selected:</label>
              <span class="{{#if (eq creation.treesSelected creation.treesRequired)}}valid{{else}}invalid{{/if}}">
                {{creation.treesSelected}} / {{creation.treesRequired}}
              </span>
            </div>
            <div class="status-item">
              <label>Powers Selected:</label>
              <span class="{{#if (eq creation.powersSelected creation.powersRequired)}}valid{{else}}invalid{{/if}}">
                {{creation.powersSelected}} / {{creation.powersRequired}}
              </span>
            </div>
            <div class="status-item">
              <label>Powers at Rank 2:</label>
              <span class="{{#if (eq creation.powersAtRank2 creation.powersAtRank2Required)}}valid{{else}}invalid{{/if}}">
                {{creation.powersAtRank2}} / {{creation.powersAtRank2Required}}
              </span>
            </div>
          </div>
        </div>
        
        <div class="creation-instructions">
          <p><strong>Character Creation Rules:</strong></p>
          <ul>
            <li>Select up to <strong>2 Mastery Trees or Spell Schools</strong> (total)</li>
            <li>Select exactly <strong>4 Powers</strong> from your chosen trees</li>
            <li>Assign <strong>Rank 2</strong> to exactly <strong>2 Powers</strong> (others remain Rank 1)</li>
            <li>No power rank may exceed your Mastery Rank (currently {{creation.masteryRank}})</li>
          </ul>
        </div>
        
        {{#if creation.selectedTreesData}}
        <div class="selected-trees">
          <h4>Selected Trees:</h4>
          <div class="trees-list">
            {{#each creation.selectedTreesData}}
            <div class="tree-card">
              <div class="tree-header">
                <h5 class="tree-name">{{this.name}}</h5>
                <span class="tree-type">{{#if (eq this.type "spell")}}Spell School{{else}}Mastery Tree{{/if}}</span>
              </div>
              {{#if this.focus}}
              <div class="tree-focus">
                <strong>Focus:</strong> {{this.focus}}
              </div>
              {{/if}}
              {{#if this.roles}}
              <div class="tree-roles">
                <strong>Roles:</strong> {{#each this.roles}}{{this}}{{#unless @last}}, {{/unless}}{{/each}}
              </div>
              {{/if}}
              {{#if this.bonus}}
              <div class="tree-bonus">
                <strong>Tree Bonus:</strong>
                <div class="bonus-text">{{this.bonus}}</div>
              </div>
              {{else}}
              <div class="tree-bonus no-bonus">
                <em>No tree bonus defined</em>
              </div>
              {{/if}}
            </div>
            {{/each}}
          </div>
        </div>
        {{/if}}
        
        <!-- Selected Powers List (Creation Mode) -->
        <div class="creation-powers-list">
          <h4>Selected Powers:</h4>
          {{#if items.powers}}
            {{#each items.powers}}
              {{#if (contains ../creation.selectedTrees (default this.system.tree ""))}}
              <div class="power-card creation-power" data-item-id="{{this.id}}">
                <div class="power-header">
                  <h4 class="power-name">{{this.name}}</h4>
                  <div class="power-controls">
                    <select class="power-rank-select" data-item-id="{{this.id}}" title="Select Power Rank">
                      <option value="1" {{#if (eq this.system.level 1)}}selected{{/if}}>Rank 1</option>
                      <option value="2" {{#if (eq this.system.level 2)}}selected{{/if}}>Rank 2</option>
                    </select>
                    <button type="button" class="item-delete" title="Remove Power"><i class="fas fa-trash"></i></button>
                  </div>
                </div>
                <div class="power-details">
                  <span class="power-tree">{{default this.system.tree "No Tree"}}</span>
                  <span class="power-level">Level {{default this.system.level 1}}</span>
                </div>
              </div>
              {{/if}}
            {{/each}}
          {{else}}
            <p class="empty-message">No powers selected yet. Click "Add Mastery Power" or "Add Spell" to start.</p>
          {{/if}}
        </div>
      </div>
      {{/unless}}
      
      {{#if creationComplete}}
      <!-- Powers List (Normal Mode) -->
      <div class="powers-list-section">
        {{#if items.powers}}
          {{#each items.powers}}
            <div class="power-card" data-item-id="{{this.id}}">
              <div class="power-header-compact">
                <div class="power-name-compact">{{this.name}}</div>
                <div class="power-info-compact">
                  <span class="power-damage-compact" title="Damage">
                    <i class="fas fa-sword"></i> {{powerDamage (lookup this.system.roll 'damage')}}
                  </span>
                  <span class="power-special-compact" title="Special">
                    <i class="fas fa-star"></i> {{powerSpecials this.system.specials}}
                  </span>
                  <span class="power-category-compact" title="Category">
                    <i class="fas fa-crosshairs"></i> {{powerCategory this.system.range this.system.aoe}}
                  </span>
                  <span class="power-type-compact" title="Type">
                    <i class="fas fa-bolt"></i> {{powerTypeDisplay this.system.powerType}}
                  </span>
                </div>
                <div class="power-controls">
                  <button type="button" class="item-edit" title="Edit"><i class="fas fa-edit"></i></button>
                  <button type="button" class="item-delete" title="Delete"><i class="fas fa-trash"></i></button>
                </div>
              </div>
              <div class="power-description-compact">{{this.system.description}}</div>
              {{#if this.system.equipped}}
                <button type="button" class="power-use-btn" data-power-id="{{this.id}}">
                  <i class="fas fa-bolt"></i> Use Power
                </button>
              {{/if}}
            </div>
          {{/each}}
        {{else}}
          <p class="empty-message">No powers yet. Click "Add Mastery Power" or "Add Spell" to start.</p>
        {{/if}}
      </div>
      {{/if}}
      
    </div>
    
    <!-- EQUIPMENT TAB -->
    <div class="tab equipment" data-group="primary" data-tab="equipment">
      
      <div class="equipment-overview">
        <h3 style="width: 225px !important;"><i class="fas fa-shield-alt"></i> Equipment</h3>
        <div class="equipment-controls" style="width: 100%; height: 6px;">
          <button type="button" class="add-weapon-btn" title="Add Weapon" style="height: 28px;">
            <i class="fas fa-sword"></i> Add Weapon
          </button>
          <button type="button" class="add-armor-btn" title="Add Armor" style="height: 30px;">
            <i class="fas fa-shield"></i> Add Armor
          </button>
          <button type="button" class="add-shield-btn" title="Add Shield" style="height: 30px;">
            <i class="fas fa-shield-alt"></i> Add Shield
          </button>
        </div>
      </div>
      
      <!-- Weapons Section -->
      <div class="equipment-section">
        <h4><i class="fas fa-sword"></i> Weapons</h4>
        {{#if items.weapons}}
          <div class="weapons-list">
            {{#each items.weapons}}
              <div class="equipment-item" data-item-id="{{this.id}}">
                <div class="equipment-header">
                  <div class="equipment-name">
                    <input type="checkbox" name="equipped" {{#if this.system.equipped}}checked{{/if}} data-item-id="{{this.id}}" />
                    <label>{{this.name}}</label>
                  </div>
                  <div class="equipment-controls">
                    <button type="button" class="item-edit" title="Edit"><i class="fas fa-edit"></i></button>
                    <button type="button" class="item-delete" title="Delete"><i class="fas fa-trash"></i></button>
                  </div>
                </div>
                <div class="equipment-details">
                  <div class="equipment-stat">
                    <span class="stat-label">Damage:</span>
                    <span class="stat-value">{{default this.system.damage "1d8"}}</span>
                  </div>
                  <div class="equipment-stat">
                    <span class="stat-label">Type:</span>
                    <span class="stat-value">{{default this.system.weaponType "melee"}}</span>
                  </div>
                  <div class="equipment-stat">
                    <span class="stat-label">Hands:</span>
                    <span class="stat-value">{{default this.system.hands 1}}</span>
                  </div>
                  {{#if this.system.innateAbilities}}
                    <div class="equipment-stat">
                      <span class="stat-label">Properties:</span>
                      <span class="stat-value">{{this.system.innateAbilities.join ', '}}</span>
                    </div>
                  {{/if}}
                  {{#if this.system.specials}}
                    <div class="equipment-stat">
                      <span class="stat-label">Special:</span>
                      <span class="stat-value">{{this.system.specials.join ', '}}</span>
                    </div>
                  {{/if}}
                </div>
                {{#if this.system.description}}
                  <div class="equipment-description">{{this.system.description}}</div>
                {{/if}}
              </div>
            {{/each}}
          </div>
        {{else}}
          <p class="empty-message">No weapons yet. Click "Add Weapon" to start.</p>
        {{/if}}
      </div>
      
      <!-- Armor Section -->
      <div class="equipment-section">
        <h4><i class="fas fa-shield"></i> Armor</h4>
        {{#if items.armor}}
          <div class="armor-list">
            {{#each items.armor}}
              <div class="equipment-item" data-item-id="{{this.id}}">
                <div class="equipment-header">
                  <div class="equipment-name">
                    <input type="checkbox" name="equipped" {{#if this.system.equipped}}checked{{/if}} data-item-id="{{this.id}}" />
                    <label>{{this.name}}</label>
                  </div>
                  <div class="equipment-controls">
                    <button type="button" class="item-edit" title="Edit"><i class="fas fa-edit"></i></button>
                    <button type="button" class="item-delete" title="Delete"><i class="fas fa-trash"></i></button>
                  </div>
                </div>
                <div class="equipment-details">
                  <div class="equipment-stat">
                    <span class="stat-label">Armor Value:</span>
                    <span class="stat-value">+{{default this.system.armorValue 0}}</span>
                  </div>
                  <div class="equipment-stat">
                    <span class="stat-label">Type:</span>
                    <span class="stat-value">{{capitalize (default this.system.type "light")}}</span>
                  </div>
                  {{#if this.system.skillPenalty}}
                  <div class="equipment-stat">
                    <span class="stat-label">Skill Penalty:</span>
                    <span class="stat-value">{{this.system.skillPenalty}}</span>
                  </div>
                  {{/if}}
                </div>
                {{#if this.system.description}}
                  <div class="equipment-description">{{this.system.description}}</div>
                {{/if}}
              </div>
            {{/each}}
          </div>
        {{else}}
          <p class="empty-message">No armor yet. Click "Add Armor" to start.</p>
        {{/if}}
      </div>
      
      <!-- Shields Section -->
      <div class="equipment-section">
        <h4><i class="fas fa-shield-alt"></i> Shields</h4>
        {{#if items.shields}}
          <div class="shields-list">
            {{#each items.shields}}
              <div class="equipment-item" data-item-id="{{this.id}}">
                <div class="equipment-header">
                  <div class="equipment-name">
                    <input type="checkbox" name="equipped" {{#if this.system.equipped}}checked{{/if}} data-item-id="{{this.id}}" />
                    <label>{{this.name}}</label>
                  </div>
                  <div class="equipment-controls">
                    <button type="button" class="item-edit" title="Edit"><i class="fas fa-edit"></i></button>
                    <button type="button" class="item-delete" title="Delete"><i class="fas fa-trash"></i></button>
                  </div>
                </div>
                <div class="equipment-details">
                  <div class="equipment-stat">
                    <span class="stat-label">Shield Value:</span>
                    <span class="stat-value">+{{default this.system.shieldValue 0}}</span>
                  </div>
                  <div class="equipment-stat">
                    <span class="stat-label">Type:</span>
                    <span class="stat-value">{{capitalize (default this.system.type "parry")}}</span>
                  </div>
                  {{#if this.system.evadeBonus}}
                  <div class="equipment-stat">
                    <span class="stat-label">Evade Bonus:</span>
                    <span class="stat-value">+{{this.system.evadeBonus}}</span>
                  </div>
                  {{/if}}
                  {{#if this.system.skillPenalty}}
                  <div class="equipment-stat">
                    <span class="stat-label">Skill Penalty:</span>
                    <span class="stat-value">{{this.system.skillPenalty}}</span>
                  </div>
                  {{/if}}
                </div>
                {{#if this.system.description}}
                  <div class="equipment-description">{{this.system.description}}</div>
                {{/if}}
              </div>
            {{/each}}
          </div>
        {{else}}
          <p class="empty-message">No shields yet. Click "Add Shield" to start.</p>
        {{/if}}
      </div>
      
    </div>
    
    <!-- DISADVANTAGES TAB -->
    <div class="tab disadvantages" data-group="primary" data-tab="disadvantages">
      <div class="disadvantages-overview">
        <h3><i class="fas fa-exclamation-triangle"></i> Disadvantages</h3>
        <div class="disadvantages-summary">
          <div class="summary-item">
            <label>Total Disadvantage Points:</label>
            <span class="summary-value">{{default disadvantagePointsTotal 0}} / 8</span>
          </div>
        </div>
      </div>
      
      {{#unless creationComplete}}
      <div class="disadvantages-creation-controls">
        <button type="button" class="add-disadvantage-btn" title="Add Disadvantage">
          <i class="fas fa-plus"></i> Add Disadvantage
        </button>
      </div>
      {{/unless}}
      
      {{#if disadvantages.length}}
      <div class="disadvantages-list">
        {{#each disadvantages as |disadvantage index|}}
        <div class="disadvantage-card-sheet" data-index="{{index}}">
          <div class="disadvantage-header-sheet">
            <h4>{{disadvantage.name}}</h4>
            <div class="disadvantage-controls">
              <span class="disadvantage-points-sheet">{{disadvantage.points}} pts</span>
              {{#unless ../creationComplete}}
              <button type="button" class="disadvantage-edit-btn" data-index="{{index}}" title="Edit">
                <i class="fas fa-edit"></i>
              </button>
              <button type="button" class="disadvantage-remove-btn" data-index="{{index}}" title="Remove">
                <i class="fas fa-trash"></i>
              </button>
              {{/unless}}
            </div>
          </div>
          {{#if disadvantage.description}}
          <p class="disadvantage-description-sheet">{{disadvantage.description}}</p>
          {{/if}}
          {{#if disadvantage.details}}
          <div class="disadvantage-details-sheet">
            {{#each disadvantage.details as |value key|}}
            <div class="detail-item-sheet">
              <strong>{{capitalize key}}:</strong> {{value}}
            </div>
            {{/each}}
          </div>
          {{/if}}
        </div>
        {{/each}}
      </div>
      {{else}}
      <p class="empty-message">No disadvantages selected.</p>
      {{/if}}
      
      {{#unless creationComplete}}
      <div class="creation-note">
        <p><i class="fas fa-info-circle"></i> You can select up to 8 points of disadvantages. These will set your starting Faith Fractures.</p>
      </div>
      {{/unless}}
    </div>
    
    <!-- BIOGRAPHY TAB -->
    <div class="tab biography" data-group="primary" data-tab="biography">
      <div class="biography-content">
        <div class="form-group">
          <label>Blood Color (Blutfarbe):</label>
          <div class="blood-color-input-group">
            <input type="color" name="system.bloodColor" id="blood-color-picker" value="{{default system.bloodColor '#8b0000'}}" title="Choose the color for blood pools when this character takes damage"/>
            <input type="text" class="blood-color-text" id="blood-color-text" value="{{default system.bloodColor '#8b0000'}}" placeholder="#8b0000" pattern="^#[0-9A-Fa-f]{6}$" title="Hex color code (e.g., #8b0000 for dark red, #ff0000 for red, #0000ff for blue)"/>
          </div>
          <p class="hint"><i class="fas fa-info-circle"></i> This color will be used for blood pools when this character takes damage.</p>
        </div>
        
        <div class="form-group">
          <label>Echo:</label>
          {{editor system.bio.echo target="system.bio.echo" button=true owner=owner editable=editable}}
        </div>
        
        <div class="form-group">
          <label>Concept:</label>
          {{editor system.bio.concept target="system.bio.concept" button=true owner=owner editable=editable}}
        </div>
        
        <div class="form-group">
          <label>Appearance:</label>
          {{editor system.bio.appearance target="system.bio.appearance" button=true owner=owner editable=editable}}
        </div>
        
        <div class="form-group">
          <label>Notes:</label>
          {{editor system.bio.notes target="system.bio.notes" button=true owner=owner editable=editable}}
        </div>
      </div>
    </div>
    
  </section>
</form>
