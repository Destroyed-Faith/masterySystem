          {{/each}}
        </div>
      </div>
      
    </div>
    
    <!-- POWERS TAB -->
    <div class="tab powers" data-group="primary" data-tab="powers">
      
      <div class="powers-overview">
        <h3><i class="fas fa-magic"></i> Mastery Powers</h3>
        <button type="button" class="add-power-btn" title="Add New Power">
          <i class="fas fa-plus"></i> Add Power
        </button>
      </div>
      
      <!-- Powers List (Compact Table) -->
      <div class="powers-list-section">
        {{#if items.powers}}
          <div class="powers-table">
            {{#each items.powers}}
              <div class="power-row-compact" data-item-id="{{this.id}}">
                <div class="power-main-info">
                  <span class="power-name-compact">{{this.name}}</span>
                  <span class="power-tree-badge">{{default this.system.tree "No Tree"}}</span>
                </div>
                
                <div class="power-stats-compact">
                  <span class="stat-badge level-badge">Lv {{default this.system.level 1}}</span>
                  <span class="stat-badge type-badge">{{default this.system.powerType "Active"}}</span>
                  {{#if this.system.range}}
                    <span class="stat-badge range-badge">{{this.system.range}}</span>
                  {{/if}}
                  {{#if this.system.cost.action}}
                    <span class="stat-badge cost-badge">1 Action</span>
                  {{/if}}
                  {{#if (gt this.system.cost.stones 0)}}
                    <span class="stat-badge stones-badge">{{this.system.cost.stones}} Stones</span>
                  {{/if}}
                </div>
                
                <div class="power-effect-compact">
                  {{#if this.system.effect}}
                    <p class="effect-text">{{this.system.effect}}</p>
                  {{else}}
                    <p class="effect-text">{{this.system.description}}</p>
                  {{/if}}
                </div>
                
                <div class="power-actions-compact">
                  <button type="button" class="item-edit-compact" data-item-id="{{this.id}}" title="Edit">
                    <i class="fas fa-edit"></i>
                  </button>
                  <button type="button" class="item-delete-compact" data-item-id="{{this.id}}" title="Delete">
                    <i class="fas fa-trash"></i>
                  </button>
                </div>
              </div>
            {{/each}}
          </div>
        {{else}}
          <p class="empty-message">No powers yet. Click "Add Power" to start.</p>
        {{/if}}
      </div>
      
    </div>
    
    <!-- MAGIC TAB -->
    <div class="tab magic" data-group="primary" data-tab="magic">
      
      <div class="magic-overview">
        <h3><i class="fas fa-hat-wizard"></i> Spell Schools</h3>
        <button type="button" class="add-spell-btn" title="Add New Spell">
          <i class="fas fa-plus"></i> Add Spell
        </button>
      </div>
      
      <!-- Spells List (Compact Table) -->
      <div class="spells-list-section">
        {{#if items.spells}}
          <div class="spells-table">
            {{#each items.spells}}
              <div class="spell-row-compact" data-item-id="{{this.id}}">
                <div class="spell-main-info">
                  <span class="spell-name-compact">{{this.name}}</span>
                  <span class="spell-school-badge">{{default this.system.school "No School"}}</span>
                </div>
                
                <div class="spell-stats-compact">
                  <span class="stat-badge level-badge">Lv {{default this.system.level 1}}</span>
                  <span class="stat-badge type-badge">{{default this.system.spellType "Active"}}</span>
                  {{#if this.system.range}}
                    <span class="stat-badge range-badge">{{this.system.range}}</span>
                  {{/if}}
                  {{#if this.system.castingTime}}
                    <span class="stat-badge casting-badge">{{this.system.castingTime}}</span>
                  {{/if}}
                </div>
                
                <div class="spell-effect-compact">
                  <p class="effect-text">{{this.system.description}}</p>
                </div>
                
                <div class="spell-actions-compact">
                  <label class="prepared-toggle">
                    <input type="checkbox" name="items.{{this.id}}.system.prepared" {{#if this.system.prepared}}checked{{/if}} />
                    <span>Prepared</span>
                  </label>
                  <button type="button" class="item-edit-compact" data-item-id="{{this.id}}" title="Edit">
                    <i class="fas fa-edit"></i>
                  </button>
                  <button type="button" class="item-delete-compact" data-item-id="{{this.id}}" title="Delete">
                    <i class="fas fa-trash"></i>
                  </button>
                </div>
              </div>
            {{/each}}
          </div>
        {{else}}
          <p class="empty-message">No spells yet. Click "Add Spell" to start.</p>
        {{/if}}
      </div>
      
    </div>
    
    <!-- EQUIPMENT TAB -->
    <div class="tab equipment" data-group="primary" data-tab="equipment">
      <p style="padding: 20px; text-align: center; color: #666;">Equipment tab - Weapons, Armor, Artifacts</p>
    </div>
    
    <!-- BIOGRAPHY TAB -->
    <div class="tab biography" data-group="primary" data-tab="biography">
      <p style="padding: 20px; text-align: center; color: #666;">Biography tab - Background, Notes</p>
    </div>
    
  </section>
</form>
